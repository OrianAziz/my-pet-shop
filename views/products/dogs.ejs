    .product-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      padding: 20px;
    }

    /* Style for each product card */
    .product-card {
      width: 250px;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .product-card:hover {
      transform: translateY(-5px);
    }

    /* Style for the image */
    .product-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    /* Style for the content inside the card */
    .product-card .product-details {
      padding: 15px;
    }

    /* Style for the product name */
    .product-card h3 {
      margin: 0;
      font-size: 18px;
      color: #333;
    }

    /* Style for the price */
    .product-card p.price {
      font-size: 16px;
      font-weight: bold;
      color: #007BFF;
    }

    /* Style for the button link */
    .product-card a {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 12px;
      background-color: #007BFF;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
    }

    .product-card a:hover {
      background-color: #0056b3;
    }
  </style>
