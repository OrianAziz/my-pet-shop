     <section class="sign-container">
        <div class="signup-container"> 
          <h2>SignUp</h2>
          <form action="/auth/signup" method="POST">
             <!-- 砖转 驻专 砖 -->
             <ul class="form-list">
              <li class="signup-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required autocomplete="off">
              </li>
      
              <li class="signup-group">
                <label for="first_name">First Name:</label>
                <input type="text" id="first_name" name="first_name" placeholder="Enter your first name" required autocomplete="on">
              </li>
      
              <li class="signup-group">
                <label for="family_name">Family Name:</label>
                <input type="text" id="family_name" name="family_name" placeholder="Enter your family name" required autocomplete="on">
              </li>
      
              <li class="signup-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
              </li>

              <h3>Address:</h3>
              <!-- 砖转 转转 -->
              <li class="signup-group">
                <label for="address[country]">Country:</label>
                <input type="text" id="country" name="address[country]" placeholder="Enter your country" required>
              </li>
      
              <li class="signup-group">
                <label for="address[street]">Street:</label>
                <input type="text" id="street" name="address[street]" placeholder="Enter your street" required>
              </li>
      
              <li class="signup-group">
                <label for="address[city]">City:</label>
                <input type="text" id="city" name="address[city]" placeholder="Enter your city" required>
              </li>
      
              <li class="signup-group">
                <label for="address[floor]">Floor:</label>
                <input type="text" id="floor" name="address[floor]" placeholder="Enter your floor">
              </li>
      
              <li class="signup-group">
                <label for="address[appartement]">Appartement:</label>
                <input type="text" id="appartement" name="address[appartement]" placeholder="Enter your appartement number">
              </li>
      
              <li class="signup-group">
                <label for="address[zip]">ZIP:</label>
                <input type="text" id="zip" name="address[zip]" placeholder="Enter your ZIP code" required>
              </li>
      
              <!-- 砖转 转转  -->
              <h3>Billing Address:</h3>
              <li class="signup-group">
                <label for="billing_address[country]">Billing Country:</label>
                <input type="text" id="billing_country" name="billing_address[country]" placeholder="Enter your billing country" required>
              </li>
      
              <li class="signup-group">
                <label for="billing_address[street]">Billing Street:</label>
                <input type="text" id="billing_street" name="billing_address[street]" placeholder="Enter your billing street" required>
              </li>
      
              <li class="signup-group">
                <label for="billing_address[city]">Billing City:</label>
                <input type="text" id="billing_city" name="billing_address[city]" placeholder="Enter your billing city" required>
              </li>
      
              <li class="signup-group">
                <label for="billing_address[zip]">Billing ZIP:</label>
                <input type="text" name="billing_address[zip]" placeholder="Enter your billing ZIP code" required>
              </li>
      
              <li class="signup-group">
                <button type="submit" class="submit-btn">Signup</button>
              </li>
            </ul>
          </form>
